generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  // Connection URL moved to prisma.config.ts; configure adapter or accelerateUrl
  // and pass it to the PrismaClient constructor as documented:
  // https://pris.ly/d/config-datasource and https://pris.ly/d/prisma7-client-config
}

model Issue {
  id Int @id @default(autoincrement())
  title String
  description String
  status IssueStatus @default(OPEN)
  createdAt DateTime @default(now())
  updateAt DateTime @updatedAt
}

enum IssueStatus {
  OPEN
  IN_PROGRESS
  CLOSED
}